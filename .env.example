# =============================================================================
# OmniWatch - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values
# =============================================================================

# -----------------------------------------------------------------------------
# GENERAL
# -----------------------------------------------------------------------------
COMPOSE_PROJECT_NAME=omniwatch
TZ=Europe/Paris

# -----------------------------------------------------------------------------
# ELASTICSEARCH 8.x
# -----------------------------------------------------------------------------
# IMPORTANT: Define a strong password for the elastic user
ELASTIC_PASSWORD=
ELASTIC_USERNAME=elastic
ELASTIC_HOST=elasticsearch
ELASTIC_PORT=9200
# JVM Heap RAM Limit - CRITICAL: Do not exceed available RAM
ES_JAVA_OPTS=-Xms1g -Xmx1g

# -----------------------------------------------------------------------------
# OLLAMA (Local AI Inference Engine)
# -----------------------------------------------------------------------------
OLLAMA_HOST=ollama
OLLAMA_PORT=11434
# Models to use
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
OLLAMA_CHAT_MODEL=llama3

# -----------------------------------------------------------------------------
# N8N (ETL Orchestration)
# -----------------------------------------------------------------------------
N8N_HOST=n8n
N8N_PORT=5678
# Basic authentication (set to true to enable)
N8N_BASIC_AUTH_ACTIVE=false
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=
# Encryption key for storing credentials (generate with: openssl rand -hex 32)
N8N_ENCRYPTION_KEY=
# Public URL for webhooks (adjust according to your domain)
N8N_WEBHOOK_URL=http://localhost:5678

# -----------------------------------------------------------------------------
# DIFY (RAG Engine & Interface)
# -----------------------------------------------------------------------------
# PostgreSQL (Dify Database)
DIFY_DB_USERNAME=
DIFY_DB_PASSWORD=
DIFY_DB_HOST=dify-db
DIFY_DB_PORT=5432
DIFY_DB_DATABASE=dify

# Redis (Dify Cache)
DIFY_REDIS_HOST=dify-redis
DIFY_REDIS_PORT=6379
DIFY_REDIS_PASSWORD=

# Dify API
DIFY_API_HOST=dify-api
DIFY_API_PORT=5001
DIFY_SECRET_KEY=

# Dify Web
DIFY_WEB_HOST=dify-web
DIFY_WEB_PORT=3000

# -----------------------------------------------------------------------------
# VOLUME PATHS (Persistence)
# -----------------------------------------------------------------------------
VOLUMES_PATH=./volumes
OLLAMA_VOLUME_PATH=./volumes/ollama
ELASTICSEARCH_VOLUME_PATH=./volumes/elasticsearch/data
N8N_VOLUME_PATH=./volumes/n8n
DIFY_DB_VOLUME_PATH=./volumes/dify/db
DIFY_REDIS_VOLUME_PATH=./volumes/dify/redis
DIFY_STORAGE_VOLUME_PATH=./volumes/dify/storage
